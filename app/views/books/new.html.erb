<%= form_with(model: @book, local: true) do |form| %>

    <div>
        <%= form.label :title%>
        <%= form.text_field :title%>
    </div>

    <div>
        <%= form.label :autor%>
        <%= form.text_field :autor%>
    </div>

    <div>
        <%= form.label :isbn%>
        <%= form.text_field :isbn%>
    </div>

    <div>
        <%= form.submit %>
    </div>

<% end %>